@model List<CountrySportModel>
@{
    ViewData["Title"] = "Your Favorites";
}

<h2>Your Favorite Sports</h2>

@if (Model.Count == 0)
{
    <p>No favorites yet!</p>
}
else
{
    <ul>
        @foreach (var sport in Model)
        {
            <li>
                <img src="@sport.FlagPath" alt="@sport.Country flag" style="height:30px" />
                @sport.Country - @sport.Sport (@sport.Game, @sport.Category)
            </li>
        }
    </ul>
}

<a asp-controller="Sport" asp-action="Index" class="btn">Return to Home Page</a>
<a asp-action="Clear" class="btn">Clear Favorites</a>