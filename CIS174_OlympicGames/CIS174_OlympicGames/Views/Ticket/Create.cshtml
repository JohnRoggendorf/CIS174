@model TicketModel

<h2>Create Ticket</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SprintNumber"></label>
        <input asp-for="SprintNumber" type="number" />
        <span asp-validation-for="SprintNumber" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PointValue"></label>
        <input asp-for="PointValue" type="number" />
        <span asp-validation-for="PointValue" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Status"></label>
        <select asp-for="Status">
            <option value="to do">To Do</option>
            <option value="in progress">In Progress</option>
            <option value="qa">Quality Assurance (QA)</option>
            <option value="done">Done</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit">Add Ticket</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}